package fundamentals;
import java.util.Scanner;

public class ChallengeConversion {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner (System.in);
		
		System.out.print ("Digite o primeiro salário: R$");
		String n1 = entrada.nextLine().replace(",", ".");
		float s1 = Float.parseFloat(n1);
		
		System.out.print ("Digite o segundo salário: R$");
	    String n2 = entrada.nextLine().replace(",", ".");;
	    float s2 = Float.parseFloat(n2);
		
		System.out.print ("Digite o terceiro salário: R$");
		String n3 = entrada.nextLine().replace(",", ".");;
		float s3 = Float.parseFloat(n3);
		
		entrada.close();
		
		float soma = s1 + s2 + s3;
		float media = soma / 3;
		
		System.out.println ("A média dos salários é: R$" + media);
		
	}
}
